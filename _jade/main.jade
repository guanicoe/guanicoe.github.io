|---
|layout: default
|---
| 
aside.sidebar
  header
    .about
      .cover-author-image
        a(href='{{site.baseurl}}/')
          img(src='{{site.baseurl}}/assets/img/{% if site.author-img %}{{site.author-img}}{% endif %}', alt='{{site.author}}')
          
      .author-name {{site.author}}
      p {{site.about-author}}
    div.menu
      {% include menu.html %}
  footer
    section.contact
      h3.contact-title Contact me
      ul
        //- li
        //-   a(href='https://twitter.com/{{ site.social-twitter }}', target='_blank')
        //-     i.fab.fa-twitter(aria-hidden='true')
        li.github
          a(href='https://github.com/{{site.social-github}}', target='_blank')
            i.fab.fa-github
        li.discord
          a(href='https://discord.gg/{{site.social-discord}}', target='_blank')
            i.fab.fa-discord
        li.email
          a(href='mailto:{{site.social-email}}')
            i.fa.fa-at    

    .copyright
      p {{site.time | date: '%Y'}} Â© {{site.author}}
.content-box.clearfix
  | {{ content }}
